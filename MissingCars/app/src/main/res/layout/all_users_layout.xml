<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginBottom="0dp"
    android:orientation="vertical"
    tools:layout_height="410dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/post_image"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:padding="12dp"
        tools:layout_height="70dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/all_users_profile_image"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/all_users_username"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:text="Users Name"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/all_users_date"

                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/all_users_time"
                android:layout_width="281dp"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@android:dimen/thumbnail_height"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:id="@+id/post_image"
                android:layout_width="494dp"
                android:layout_height="300dp"
                android:layout_margin="3dp"
                android:adjustViewBounds="true"
                android:minHeight="200dp"
                android:minWidth="500dp"
                android:scaleType="center"
                tools:layout_width="500dp" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        tools:layout_height="120dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/all_users_number"
                android:layout_alignBottom="@+id/all_users_number"
                android:layout_alignParentStart="true"
                android:layout_marginStart="23dp"
                android:text="number :" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView"
                android:layout_below="@+id/textView3"
                android:text="color :" />

            <TextView
                android:id="@+id/all_users_description"
                android:layout_width="298dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:text="description"
                android:textAlignment="center"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />

            <TextView
                android:id="@+id/all_users_number"
                android:layout_width="298dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/all_users_description"
                android:layout_marginStart="23dp"
                android:layout_toEndOf="@+id/textView"
                android:text="number"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />

            <TextView
                android:id="@+id/all_users_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/all_users_number"
                android:layout_below="@+id/all_users_number"
                android:text="place"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                tools:layout_width="298dp" />

            <TextView
                android:id="@+id/all_users_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/all_users_place"
                android:layout_below="@+id/all_users_place"
                android:text="color"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                tools:layout_width="298dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView"
                android:layout_below="@+id/textView"
                android:text="Place :" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorp"
        android:backgroundTint="@color/colorp"
        android:text="TextView"
        android:textColor="@color/colorp" />


</LinearLayout>