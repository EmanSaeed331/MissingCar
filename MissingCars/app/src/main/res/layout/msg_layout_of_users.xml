<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:layout_height="100dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_img_chat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/msg_text"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/msg_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerVertical="true"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/user_img_chat"
        android:background="@drawable/shape"
        android:padding="6dp"
        android:text="msg"
        android:textSize="20dp"
        tools:ignore="UnknownId"
        tools:layout_width="280dp" />

    <ImageView
        android:id="@+id/msg_image_view"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/msg_text"
        android:layout_alignTop="@+id/user_img_chat"
        android:scaleType="centerCrop" />

</RelativeLayout>